<p id="notice"><%= notice %></p>

<h1>Listing Credit Cards</h1>

<table>
  <thead>
    <tr>
      <th>Number</th>
      <th>Cvv</th>
      <th>Expiration month</th>
      <th>Expiration year</th>
      <th>Firstname</th>
      <th>Lastname</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @credit_cards.each do |credit_card| %>
      <tr>
        <td><%= credit_card.number %></td>
        <td><%= credit_card.cvv %></td>
        <td><%= credit_card.expiration_month %></td>
        <td><%= credit_card.expiration_year %></td>
        <td><%= credit_card.firstname %></td>
        <td><%= credit_card.lastname %></td>
        <td><%= link_to 'Show', credit_card %></td>
        <td><%= link_to 'Edit', edit_credit_card_path(credit_card) %></td>
        <td><%= link_to 'Destroy', credit_card, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

